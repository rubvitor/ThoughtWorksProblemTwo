@{
    Layout = null;
}

<h2>Problem 2</h2>
<div>
    <div class="well well-large">
        <label for="Tracks">Tracks Number</label>
        <input type="number" id="tracksNumber" name="title" />
        <h3>Add Session</h3>
        <form>
            <input type="button" id="btnSubmitSession" class="btn" data-ng-click="insertSession()" value="INSERT SESSION" />
            <div class="grid-style" data-ng-grid="SessionsIniGrid"></div>
            <input type="file" class="btn" data-file-model="fileUpload($fileContent)" />
            <div data-ng-if="content">
                <h2>File content is:</h2>
                <pre>{{ content }}</pre>
            </div>
        </form>
        <div class="sessionIni-details" data-ng-show="selectedIniSession">
            <div class="well well-large">
                <h3>Session Details</h3>
                <form>
                    <label for="Title">Id</label>
                    <input type="text" id="Id" name="Id" data-ng-model="selectedIniSession.Id" />
                    <label for="TimeSessionMinutes">Time (min.)</label>
                    <input type="number" id="TimeSessionMinutes" name="TimeSessionMinutes" data-ng-model="selectedIniSession.TimeSessionMinutes" />
                    <label for="TimeIniSession">Start Time</label>
                    <input type="time" pattern="([01]?[0-9]{1}|2[0-3]{1}):[0-5]{1}[0-9]{1}" title="TimeStart" id="TimeIniSession" name="TimeIniSession" data-ng-model="selectedIniSession.TimeIniSession" />
                    <input type="button" id="btnSubmitUpdateIniSession" class="btn" data-ng-click="updateIniSession(selectedIniSession)" value="UPDATE SESSION" />
                </form>
            </div>
        </div>

        <h3>Add Talk</h3>
        <form>
            <input type="button" id="btnSubmitTalk" class="btn" data-ng-click="insertTalk()" value="INSERT TALK" />
            <input type="button" id="btnRemoveTalk" class="btn" data-ng-click="removeTalk()" value="REMOVE TALK" />
        </form>
        <div class="grid-style" data-ng-grid="TalkGrid">
        </div>
    </div>
    <div class="talk-details" data-ng-show="selectedTalk">
        <div class="well well-large">
            <h3>Talk Details</h3>
            <form>
                <label for="Title">Title</label>
                <input type="text" id="title" name="title" data-ng-model="selectedTalk.title" />
                <label for="TimeMinutes">Time</label>
                <input type="number" id="timeMinutes" name="timeMinutes" data-ng-model="selectedTalk.timeMinutes" />
                <input type="button" id="btnSubmit" class="btn" data-ng-click="updateTalk(selectedTalk)" value="UPDATE" />
            </form>
        </div>
    </div>
    <div class="well well-large">
        <h3>Defined Tracks</h3>
        <form>
            <input type="button" id="btnSubmitTalks" class="btn" data-ng-click="postTalks(talksList, sessionsIniList)" value="DEFINE" />
            <div class="grid-style" data-ng-grid="TrackGrid">
            </div>
            <div class="grid-style" data-ng-grid="SessionGrid">
            </div>
            <div class="grid-style" data-ng-grid="TalkFinalGrid">
            </div>
        </form>
    </div>
</div>
